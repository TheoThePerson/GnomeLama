<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnomelama" path="/org/gnomelama/">
    <key name="panel-width-fraction" type="d">
      <default>0.17</default>
      <summary>Panel Width Fraction</summary>
      <description>Defines the fraction of screen width occupied by the panel.</description>
    </key>
    <key name="input-field-height-fraction" type="d">
      <default>0.032</default>
      <summary>Input Field Height Fraction</summary>
      <description>Height of the input field as a fraction of screen height.</description>
    </key>
    <key name="padding-fraction-x" type="d">
      <default>0.02</default>
      <summary>Padding Fraction X</summary>
      <description>Horizontal padding fraction.</description>
    </key>
    <key name="padding-fraction-y" type="d">
      <default>0.01</default>
      <summary>Padding Fraction Y</summary>
      <description>Vertical padding fraction.</description>
    </key>
    <key name="top-bar-height-fraction" type="d">
      <default>0.03</default>
      <summary>Top Bar Height Fraction</summary>
      <description>Defines the height of the top bar.</description>
    </key>
    <key name="clear-icon-scale" type="d">
      <default>1</default>
      <summary>Clear Icon Scale</summary>
      <description>Scale factor for the clear history icon.</description>
    </key>
    <key name="clear-button-padding-fraction" type="d">
      <default>0.01</default>
      <summary>Clear Button Padding Fraction</summary>
      <description>Padding for the clear button as a fraction.</description>
    </key>
    <key name="user-message-color" type="s">
      <default>"#276988"</default>
      <summary>User Message Color</summary>
      <description>Color of user messages.</description>
    </key>
    <key name="ai-message-color" type="s">
      <default>"##D77C19"</default>
      <summary>AI Message Color</summary>
      <description>Color of AI messages.</description>
    </key>
    <key name="background-color" type="s">
      <default>"#313131"</default>
      <summary>Background Color</summary>
      <description>Background color of the panel.</description>
    </key>
    <key name="top-bar-color" type="s">
      <default>"#626262"</default>
      <summary>Top Bar Color</summary>
      <description>Background color of the top bar.</description>
    </key>
    <key name="text-color" type="s">
      <default>"#FFFFFF"</default>
      <summary>Text Color</summary>
      <description>Default text color for the panel.</description>
    </key>
    <key name="default-model" type="s">
      <default>"llama3.2:1b"</default>
      <summary>Default AI Model</summary>
      <description>The default AI model to use for conversations.</description>
    </key>
    <key name="api-endpoint" type="s">
      <default>"http://localhost:11434/api/generate"</default>
      <summary>API Endpoint</summary>
      <description>The API endpoint for the Ollama service.</description>
    </key>
    <key name="models-api-endpoint" type="s">
      <default>"http://localhost:11434/api/tags"</default>
      <summary>Models API Endpoint</summary>
      <description>The API endpoint for fetching available models.</description>
    </key>
    <key name="temperature" type="d">
      <default>0.7</default>
      <summary>Temperature</summary>
      <description>Temperature parameter for model response randomness (0.0-1.0).</description>
    </key>
  </schema>
</schemalist>
